<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/menu"
            android:drawableRight="@drawable/settings"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#fff"
            android:textSize="55dp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/number7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/number8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/number9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="9"
            android:textColor="#fff"
            android:textSize="44dp" />
        <Button
            android:id="@+id/numberDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:textSize="44dp"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/number6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="6"
            android:textColor="#fff"
            android:textSize="44dp" />

        <Button
            android:id="@+id/numberMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="ร"
            android:textColor="#EF3831"
            android:textSize="44dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="44dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="3"
            android:textColor="#fff"
            android:textSize="44dp" />

        <Button
            android:id="@+id/numberMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="-"
            android:textColor="#EF3831"
            android:textSize="44dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numberDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="."
            android:textColor="#fff"
            android:textSize="44dp" />

        <Button
            android:id="@+id/numberZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="0"
            android:textColor="#fff"
            android:textSize="44dp" />

        <Button
            android:id="@+id/numberClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CL"
            android:textSize="22dp"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"
            />

        <Button
            android:id="@+id/numberPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"
            android:textSize="44dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/buttonPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="44dp"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/buttonSqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="^2"
            android:textColor="#EF3831"
            android:textSize="44dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            android:textSize="22dp"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/numberEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="44dp"
            android:textColor="#EF3831"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>